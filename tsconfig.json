{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* paths */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@apis/*": ["apis/*"],
      "@assets/*": ["assets/*"],
      "@hooks/*": ["hooks/*"],
      "@styles/*": ["styles/*"],
      "@pages/*": ["pages/*"],
      "@types/*": ["types/*"],
      "@layout/*": ["layout/*"],
      "@common/*": ["common/*"],
      "@components/*": ["components/*"],
      "@mock/*": ["mock/*"],
      "@utils/*": ["utils/*"]
    },

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
